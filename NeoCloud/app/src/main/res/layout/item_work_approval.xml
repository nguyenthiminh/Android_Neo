<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_height="@dimen/_94sdp">
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_height="@dimen/_62sdp">

        <TextView
            android:id="@+id/tv_nameWork"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Công việc"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:fontFamily="@font/quicksand_medium"/>
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hạng mục"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="@dimen/_8sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp"
            android:text="tv_nameEmployees"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_12sdp"
        android:weightSum="6"
        android:layout_height="@dimen/_32sdp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_duyet"
            android:layout_width="0dp"
            android:background="@drawable/bg_button"
            android:text="@string/approval"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:fontFamily="@font/quicksand_bold"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/xemDuyet"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/bg_button"
            android:textAllCaps="false"
            android:text="@string/review_approval"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>